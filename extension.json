{
  "displayName": "Facebook_CAPI_Extension",
  "name": "facebook_capi_extension",
  "platform": "edge",
  "version": "1.0.0",
  "description": "Send web signal through Edge to Facebook's Conversions API",
  "author": {
    "name": "Facebook, Inc"
  },
  "viewBasePath": "dist/",
  "configuration": {
    "viewPath": "configuration/configuration.html",
    "schema": {
      "$schema": "http://json-schema.org/draft-04/schema#",
      "type": "object",
      "properties": {
        "pixelId": {
          "type": "string",
          "minLength": 1
        },
        "accessToken":{
          "type":"string",
          "minLength":1
        },
        "lduOption":{
          "type":"string",
          "minLength":1
        }
      },
      "additionalProperties": false,
      "required": ["pixelId","accessToken", "lduOption"]
    }
  },
  "actions": [

{
  "displayName": "Facebook_CAPI_Extension",
  "name": "facebook_capi_extension",
  "platform": "edge",
  "version": "1.0.0",
  "description": "Send web signal through Edge to Facebook's Conversions API",
  "author": {
    "name": "Facebook, Inc"
  },
  "viewBasePath": "dist/",
  "configuration": {
    "viewPath": "configuration/configuration.html",
    "schema": {
      "$schema": "http://json-schema.org/draft-04/schema#",
      "type": "object",
      "properties": {
        "pixelId": {
          "type": "string",
          "minLength": 1
        },
        "accessToken":{
          "type":"string",
          "minLength":1
        }
      },
      "additionalProperties": false,
      "required": ["pixelId","accessToken"]
    }
  },
  "actions": [
    {
      "displayName": "send_CAPI_data",
      "name": "send_capi_data",
      "schema": {
        "$schema": "http://json-schema.org/draft-04/schema#",
        "type": "object",
        "properties": {
          "eventName": {
            "type": "string",
            "minLength": 1
          },
          "eventIime": {
            "type": "string",
            "minLength": 1
          }
        },
        "additionalProperties": true,
        "required": ["eventName","eventTime"]
      },
      "libPath": "src/lib/actions/sendCapiData.js",
      "viewPath": "actions/sendCapiData.html"
    }
  ]
}

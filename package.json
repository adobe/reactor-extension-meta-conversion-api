{
  "displayName": "Facebook_CAPI_Extension",
  "name": "facebook_capi_extension",
  "platform": "edge",
  "version": "1.0.0",
  "description": "Send web signal through Edge to Facebook's Conversions API",
  "author": {
    "name": "Facebook, Inc"
  },
  "scripts": {
    "build": "rm -rf dist && webpack --mode=production",
    "build:watch": "webpack --mode=development --watch=true",
    "sandbox": "webpack --env sandbox --mode=development --watch=true",
    "package": "npm run build && npx @adobe/reactor-packager",
    "prepack": "npm test && npm run build",
    "lint": "eslint 'src/**'",
    "format": "pretty-quick",
    "test": "jest --coverage",
    "test:watch": "jest --watch"
  },
  "husky": {
    "hooks": {
      "pre-commit": "pretty-quick --staged && lint-staged",
      "pre-push": "npm test"
    }
  },
  "lint-staged": {
    "*.js": [
      "npm run lint -- --fix"
    ]
  },
  "dependencies": {
    "@adobe/react-spectrum": "^3.9.0",
    "@spectrum-icons/illustrations": "^3.2.0",
    "@spectrum-icons/workflow": "^3.2.0",
    "babel-polyfill": "^6.26.0",
    "fsevents": "^2.3.2",
    "js-sha256": "^0.9.0",
    "prop-types": "^15.7.2",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-hook-form": "^6.15.5"
  },
  "devDependencies": {
    "@adobe/reactor-sandbox": "^11.1.3",
    "@babel/core": "^7.13.15",
    "@babel/plugin-proposal-class-properties": "^7.12.1",
    "@babel/plugin-transform-runtime": "^7.13.15",
    "@babel/preset-env": "^7.13.15",
    "@babel/preset-react": "^7.13.13",
    "@babel/runtime": "^7.12.5",
    "@testing-library/jest-dom": "^5.11.10",
    "@testing-library/react": "^11.2.6",
    "babel-eslint": "^10.1.0",
    "babel-jest": "^26.6.3",
    "babel-loader": "^8.1.0",
    "camelcase": "^6.2.0",
    "capitalize": "^2.0.3",
    "css-loader": "^5.2.0",
    "eslint": "^7.23.0",
    "eslint-config-airbnb": "^18.2.1",
    "eslint-config-prettier": "^6.15.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-jest-dom": "^3.7.0",
    "eslint-plugin-jsx-a11y": "^6.4.1",
    "eslint-plugin-prettier": "^3.1.4",
    "eslint-plugin-react": "^7.23.2",
    "eslint-plugin-react-hooks": "^4.2.0",
    "eslint-plugin-testing-library": "^3.10.2",
    "file-loader": "^6.2.0",
    "fs-extra": "^9.0.1",
    "html-webpack-plugin": "^4.5.0",
    "husky": "^4.3.0",
    "jest": "^26.6.3",
    "jest-runner-eslint": "^0.10.0",
    "lint-staged": "^10.5.1",
    "prettier": "^2.1.2",
    "pretty-quick": "^3.1.0",
    "style-loader": "^2.0.0",
    "stylus": "^0.54.8",
    "stylus-loader": "^4.2.0",
    "url-loader": "^4.1.1",
    "webpack": "^4.44.2",
    "webpack-cli": "^3.3.12",
    "webpack-shell-plugin": "^0.5.0",
    "yargs": "^16.1.0"
  }
}
